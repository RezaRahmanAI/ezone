@using IMSWEB.Model
@{
    ViewBag.Title = "Transfer Report";
}

<h4 class="inline-header">@(ViewBag.Title + ".")</h4>
<div class="row">
    <div class="col-lg-6 col-md-6  col-sm-12 col-lg-offset-3 col-md-offset-3">
        @using (Ajax.BeginForm("TransferReportNewFormat", "Report", new { ReturnUrl = ViewBag.ReturnUrl }, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", LoadingElementId = "spinningIcon" }, htmlAttributes: new { role = "form" }))
        {
            <div class="panel panel-default">
                <div class="panel-body">
                    <table class="table text-nowrap">
                        <tr>
                            <td>
                                <label>From Concern</label>
                            </td>
                            <td>
                                @Html.DropDownList("FromConcern", @ViewBag.FromConcerns as SelectList, "--Select Concern--", new { @class = "form-control input-sm"})
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <label>To Concern</label>
                            </td>
                            <td>
                                @Html.DropDownList("TOConcern", @ViewBag.ToConcerns as SelectList, "--Select Concern--", new { @class = "form-control input-sm"})
                            </td>
                        </tr>
                        <tr>
                            @*@if (User.IsInRole(EnumUserRoles.superadmin.ToString()) || User.IsInRole(EnumUserRoles.Admin.ToString()) || User.IsInRole(EnumUserRoles.AdminReport.ToString()))
                                {
                                    <div class="form-group">
                                        <label class="control-label col-sm-3 col-md-3">Concern</label>
                                        <div class=" col-sm-9 col-md-9">
                                            @Html.DropDownList("ConcernID", @ViewBag.Concerns as SelectList, "--Select Concern--", new { @class = "form-control input-sm" })
                                        </div>
                                    </div>
                                }*@

                            <td>
                                @Html.Label("From Date", htmlAttributes: new { @class = "control-label" })
                            </td>
                            <td>
                                <div class='col-sm-12 input-group date' id='FromDate'>
                                    <input type='text' class="input-sm form-control input-sm" name='FromDate' />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                @Html.Label("To Date", htmlAttributes: new { @class = "control-label" })
                            </td>
                            <td>
                                <div class='col-sm-12 input-group date' id='ToDate'>
                                    <input type='text' class="input-sm form-control input-sm" name='ToDate' />
                                    <span class="input-group-addon">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                    </span>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <img id="spinningIcon" height="45" width="45" style="display: none;" class="pull-right" src="~/Content/images/Spinner.gif" />
                            </td>
                            <td>
                                <input id="btnPreview" type="submit" value="Preview" class="btn btn-sm btn-info" />
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
<script>
    $('#FromDate').datetimepicker({
        defaultDate: moment(),
        format: 'DD-MMM-YYYY'
    });

    $('#ToDate').datetimepicker({
        defaultDate: moment(),
        format: 'DD-MMM-YYYY'
    });
</script>
