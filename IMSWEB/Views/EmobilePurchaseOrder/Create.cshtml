            e.preventDefault();
            toastr.error("Please select supplier");
            IsValid = false;
            $("#SuppliersCode").focus()
            return false;
        }

        if (IsValid) {
            var ProductName = $("#ProductsId").val();
            if (ProductName == "") {
                e.preventDefault();
                toastr.error("Please enter product name");
                IsValid = false;
                $("#ProductsCode").focus()
                return false;
            }
        }

        if (IsValid) {
            var GodownID = $("#PODetail_GodownID").val();
            if (GodownID == "") {
                e.preventDefault();
                toastr.error("Please select godown");
                IsValid = false;
                $("#PODetail_GodownName").focus()
                return false;
            }
        }

        if (IsValid) {
            var ColorId = $("#PODetail_ColorId").val();
            if (ColorId == "") {
                e.preventDefault();
                toastr.error("Please select color");
                IsValid = false;
                $("#PODetail_ColorName").focus()
                return false;
            }
        }

        if (IsValid) {
            var MRPRate = $("#PODetail_MRPRate").val();
