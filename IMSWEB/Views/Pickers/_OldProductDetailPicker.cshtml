@model IEnumerable<GetProductViewModel>
<div class="input-group">
    <input type="text" class="input-sm form-control input-sm" id="ProductDetailsCode" name="ProductDetailsCode" value="@ViewBag.PDetailsCode" readonly="readonly">
    <span class="input-group-btn">
        <button type="button" class="btn btn-sm btn-info" id="btnProPicker" data-toggle="modal" data-target="#ProductDetailsModal"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Pick</button>
    </span>
    <input type="text" class="input-sm form-control input-sm" id="ProductDetailsName" name="ProductDetailsName" value="@ViewBag.PDetailsName" readonly="readonly">
    <input type="hidden" class="input-sm form-control input-sm" id="ProductDetailsId" name="ProductDetailsId" value="@ViewBag.PDetailsId" readonly="readonly">
    <input type="hidden" class="input-sm form-control input-sm" id="StockDetailsId" name="StockDetailsId" value="@ViewBag.PDetailsStockDetailId" readonly="readonly">
    <input type="hidden" class="input-sm form-control input-sm" id="ColorsId" name="ColorsId" value="@ViewBag.PDetailsColorId" readonly="readonly">
    <input type="hidden" class="input-sm form-control input-sm" id="GodownID" name="GodownID" value="@ViewBag.PDetailsGodownID" readonly="readonly">
    <input type="hidden" class="input-sm form-control input-sm" id="Offer" name="OfferDescription" value="@ViewBag.OfferDescription" readonly="readonly">
    <input type="hidden" class="input-sm form-control input-sm" id="ProductType" name="ProductType" value="@ViewBag.ProductType" readonly="readonly">
</div>

<!-- Modal -->
<div class="modal fade bs-example-modal-lg" id="ProductDetailsModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h5 class="modal-title" id="myModalLabel">Existing ProductDetails</h5>
            </div>
            <div class="modal-body">
                <div id="ProductDetailstoolbar">
                    @Html.ActionLink("Create new", "Create", "Product", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-sm", target = "_blank" })
                    <span class="text-warning">&nbsp;(Requires reload current page to get new item)</span>
                </div>
                <table id="ProductDetailsTable"
                       data-toolbar="#ProductDetailstoolbar"
                       data-toggle="table"
                       data-search="true"
                       data-click-to-select="true"
                       data-single-select="true"
                       data-detail-view="false"
                       data-pagination="true"
                       data-id-field="name"
                       data-page-list="[10, 25, 50, 100, ALL]"
                       data-page-size="6"
                       class="table table-responsive table-bordered table-striped text-nowrap" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th data-field="id" class="hidden">
                            </th>
                            <th data-field="PRate" class="hidden">
                            </th>
                            </th>
                            <th data-field="ProductType" class="hidden">
                            </th>
                            <th data-checkbox="true">
                            </th>
                            <th>
                                Sl
                            </th>
                            <th data-field="code"
                                data-sortable="true">
                                Code
                            </th>
                            <th data-field="name"
                                data-sorter="sorter"
                                data-sortable="true">
                                Name
                            </th>
                            <th data-field="GodownName"
                                data-sorter="sorter"
                                data-sortable="true">
                                Godown
                            </th>
                            <th data-field="colorname"
                                data-sorter="sorter"
                                data-sortable="true">
                                Color
                            </th>
                            <th data-field="category"
                                data-sorter="sorter"
                                data-sortable="true">
                                Category
                            </th>
                            <th data-field="detailId" class="hidden">
                            </th>
                            <th data-field="colorId" class="hidden">
                            </th>
                            <th data-field="godownId" class="hidden">
                            </th>
                            <th data-field="imeNo"
                                data-sorter="sorter"
                                data-sortable="true">
                                IME No.
                            </th>

                            <th data-field="mrpRate"
                                data-sorter="sorter"
                                data-sortable="true">
                                MRP Rate
                            </th>
                            <th data-field="preStock"
                                data-sorter="sorter"
                                data-sortable="true">
                                Stock Quantity
                            </th>
                            @*<th data-field="OfferDescription"
                                    data-sorter="sorter"
                                    data-sortable="true">
                                    offer Description
                                </th>
                                <th data-field="CompressorWarrentyMonth"
                                    data-sorter="sorter"
                                    data-sortable="true">
                                    Compressor Warrenty(Month)
                                </th>
                                <th data-field="PanelWarrentyMonth"
                                    data-sorter="sorter"
                                    data-sortable="true">
                                    Panel Warrenty(Month)
                                </th>
                                <th data-field="MotorWarrentyMonth"
                                    data-sorter="sorter"
                                    data-sortable="true">
                                    Motor Warrenty(Month)
                                </th>
                                <th data-field="SparePartsWarrentyMonth"
                                    data-sorter="sorter"
                                    data-sortable="true">
                                    SpareParts Warrenty(Month)
                                </th>
                                <th data-field="ServiceWarrentyMonth"
                                    data-sorter="sorter"
                                    data-sortable="true">
                                    Service Warrenty(Month)
                                </th>*@

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="hidden">
                                        @item.ProductId
                                    </td>
                                    <td class="hidden">
                                        @item.PRate
                                    </td>
                                    <td class="hidden">
                                        @item.ProductType
                                    </td>
                                    <td></td>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @item.ProductCode
                                    </td>
                                    <td>
                                        @item.ProductName
                                    </td>
                                    <td>
                                        @item.GodownName
                                    </td>
                                    <td>
                                        @item.ColorName
                                    </td>
                                    <td>
                                        @item.CategoryName
                                    </td>
                                    <td class="hidden">
                                        @item.StockDetailsId
                                    </td>
                                    <td class="hidden">
                                        @item.ColorId
                                    </td>
                                    <td class="hidden">
                                        @item.GodownID
                                    </td>
                                    <td>
                                        @item.IMENo
                                    </td>

                                    <td>
                                        @item.MRPRate
                                    </td>
                                    @{
                                        var barcode = item.IMENo;
                                        if (barcode != "No Barcode")
                                        {
                                            <td>
                                                1
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                @item.PreStock
                                            </td>
                                        }



                                    }





                                    @*<td>
                                            @item.OfferDescription
                                        </td>
                                        <td>
                                            @item.CompressorWarrentyMonth
                                        </td>
                                        <td>
                                            @item.PanelWarrentyMonth
                                        </td>
                                        <td>
                                            @item.MotorWarrentyMonth
                                        </td>
                                        <td>
                                            @item.SparePartsWarrentyMonth
                                        </td>
                                        <td>
                                            @item.ServiceWarrentyMonth
                                        </td>*@

                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>

    $(document).on('click', '#btnProPicker', function () {
        var g = $("#GodownsId").val();
        if (g == "" || g == undefined) {
            toastr.error("Please Select Godown First.");

            return;
        }
    });

    $(document).ready(function () {
        $('[id*="_OfferDescription"]').text(@ViewBag.OfferDescription);

    });
    var $table = $('#ProductDetailsTable');
    $table.on('check.bs.table', function (e, row) {
        $('#ProductDetailsCode').val($.trim(row.code));
        $('#ProductDetailsName').val($.trim(row.name));
        $('#ProductDetailsId').val($.trim(row.id));
        //alert(row.id);
        $('#StockDetailsId').val($.trim(row.detailId));
        $('#ColorsId').val($.trim(row.colorId));
        $('#GodownID').val($.trim(row.godownId));
        //$('#OfferDescription').val($.trim(row.));
        $('[id*="_IMENo"]').val($.trim(row.imeNo));
        $("#btnGodownPicker").attr('disabled', 'disabled');


        $('[id*="_ColorName"]').val($.trim(row.colorname));
        $('[id*="_PreviousStock"]').val($.trim(row.preStock));
        $('[id*="_Quantity"]').val('1');
        $('[id*="_MRPRate"]').val($.trim(row.mrpRate)).trigger("input");
        $('[id*="_OfferDescription"]').text(row.OfferDescription);
        $('[id*="_CompressorWarrentyMonth"]').val($.trim(row.CompressorWarrentyMonth));
        $('[id*="_PanelWarrentyMonth"]').val($.trim(row.PanelWarrentyMonth));
        $('[id*="_MotorWarrentyMonth"]').val($.trim(row.MotorWarrentyMonth));
        $('[id*="_SparePartsWarrentyMonth"]').val($.trim(row.SparePartsWarrentyMonth));
        $('[id*="_ServiceWarrentyMonth"]').val($.trim(row.ServiceWarrentyMonth));
        $('[id*="_PRate"]').val($.trim(row.PRate)).trigger("input");
        $('[id*="_ProductType"]').val($.trim(row.ProductType));

        if ($.trim(row.imeNo) == "No Barcode") {
            $('[id*="_Quantity"]').attr("readonly", false);
            $('#ProductDetailsId').val($.trim(row.id)).trigger("input");
        }
        else
        {
            $('[id*="_Quantity"]').attr("readonly", true);
            $("#externalIMENo").val($.trim(row.imeNo)).trigger('input');

        }

        //$("#ProductDetailsModal").modal("toggle")
    });
    $table.on('uncheck.bs.table', function (e, row) {
        $('#ProductDetailsCode').val('');
        $('#ProductDetailsName').val('');
        $('#ProductDetailsId').val('');
        $('#StockDetailsId').val('');
        $('#ColorsId').val('');
        $('#GodownID').val('');
        $('[id*="_IMENo"]').val('');
        $('[id*="_ColorName"]').val('');
        $('[id*="_PreviousStock"]').val('');
        $('[id*="_MRPRate"]').val('').trigger("input");
        $('[id*="_Quantity"]').val('');
        $('[id*="_OfferDescription"]').text('');
        $('[id*="_ProductType"]').val('');

    });
</script>
