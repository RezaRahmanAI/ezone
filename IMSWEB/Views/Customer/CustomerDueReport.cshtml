@using IMSWEB.Model
@model IMSWEB.GetCustomerViewModel

<h4 class="inline-header">@(ViewBag.Title + ".")</h4>
<hr />
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Ajax.BeginForm("CustomerDueReport", "Report", new { ReturnUrl = ViewBag.ReturnUrl }, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", LoadingElementId = "spinningIcon" }, htmlAttributes: new { role = "form", @class = "form-horizontal" }))
                {
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-3">Customer Type</label>
                        <div class=" col-sm-9 col-md-9">
                            @Html.EnumDropDownListFor(model => model.CustomerType, "--Select Customer Type--", new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-3">Customer Name</label>
                        <div class=" col-sm-9 col-md-9">
                            @{Html.RenderAction("RenderPicker", "Picker", new { pickerType = PickerType.Customer, id = "0" });}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-3">From Date</label>
                        <div class=" col-sm-9 col-md-9">
                            <div class='input-group date' id='FromDate'>
                                <input type='text' class="input-sm form-control input-sm" name='FromDate' />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>

                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-3 col-md-3">
                            To Date
                        </label>
                        <div class=" col-sm-9 col-md-9">
                            <div class='input-group date' id='ToDate'>
                                <input type='text' class="input-sm form-control input-sm" name='ToDate' />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>
                            </div>
                        </div>
                    </div>
                    @*<div class="form-group">
                        <label class="control-label  col-sm-3 col-md-3">
                        </label>
                        <div class=' col-sm-9 col-md-9 input-group col-sm-offset-2' id='rbReportType'>
                            <label><input id="rdoOnlyDue" class="ml-4" title="Only Due" type="checkbox" value="1" name="DueType" />Only Due</label>
                        </div>
                    </div>*@

                    <div class="form-group">
                        <label class="control-label  col-sm-3 col-md-3">
                        </label>
                        <div class="col-sm-9 col-md-9 btn-group">
                            <input id="btnPreview" type="submit" value="Preview" class="btn btn-sm btn-primary" />
                            <img id="spinningIcon" height="45" width="45" style="display:none" src="~/Content/images/Spinner.gif" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


<script>

    $(document).ready(function () {

        $('#FromDate').datetimepicker({
            defaultDate: moment(),
            format: 'DD-MMM-YYYY'
        });

        $('#ToDate').datetimepicker({
