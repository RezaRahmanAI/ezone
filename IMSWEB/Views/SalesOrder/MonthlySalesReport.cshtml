@using IMSWEB.Model
@model IMSWEB.GetCustomerViewModel

@{
    ViewBag.Title = "Monthly Sales Report";
}

<h4>@(ViewBag.Title + ".")</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <div class="panel panel-default">
            <div class="panel-body">
                @using (Ajax.BeginForm("MonthlySalesReport", "Report", new { ReturnUrl = ViewBag.ReturnUrl }, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", LoadingElementId = "spinningIcon" }, htmlAttributes: new { role = "form" }))
                {
                    <input type="hidden" id="ClientDateTime" name="ClientDateTime" />
                        <div class="form-group">
                            <div class="col-sm-4">
                                @Html.Label("Month", htmlAttributes: new { @class = "control-label" })
                            </div>
                            <div class='col-sm-8 input-group date' id='FromDate'>
                                <input type='text' class="input-sm form-control input-sm" name='FromDate' />
                                <span class="input-group-addon">
                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                </span>

                            </div>
                        </div>

                        <div class="form-group">
                            <label class="control-label col-md-4">Customer Type</label>
                            <div class='col-md-8 input-group col-sm-offset-3' id='rbCustomerType'>
                                @Html.EnumDropDownListFor(i => i.CustomerType, "--All customer type--", new { @class = "form-control input-sm" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-4">
                            </div>
                            <div class='col-sm-8 input-group date' id='FromDate'>
                                <input id="rdoSummary" type="radio" title="Summary" value="1" name="ReportType" checked />Summary &nbsp;&nbsp;
                                <input id="rdioDetail" title="Detail" type="radio" value="2" name="ReportType" />Detail
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-sm-4">
                                <img id="spinningIcon" height="45" width="45" style="display: none;" class="pull-right" src="~/Content/images/Spinner.gif" />
                            </div>
                            <div class="col-sm-8">
                                <input id="btnPreview" type="submit" value="Preview" class="btn btn-sm btn-info" />
                            </div>
                        </div>
                }

            </div>
        </div>
    </div>
</div>


<script>
    $('#FromDate').datetimepicker({
        defaultDate: moment(),
        format: 'MMM-YYYY'
    });

    //$('#ToDate').datetimepicker({
    //    defaultDate: moment(),
    //    format: 'DD-MMM-YYYY'
    //});
</script>
