@model dynamic
<div class="input-group">
    <input type="text" class="input-sm form-control input-sm" id="BanksCode" name="BanksCode" value="@ViewBag.BanksCode" readonly="readonly">
    <span class="input-group-btn">
        <button type="button" id="BankPicker" class="btn btn-sm btn-info" data-toggle="modal" data-target="#BanksModal"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Pick</button>
    </span>
    <input type="text" class="input-sm form-control input-sm" id="BanksName" name="BanksName" value="@ViewBag.BanksName" readonly="readonly">
    <input type="hidden" class="input-sm form-control input-sm" id="BanksId" name="BanksId" value="@ViewBag.BanksId" readonly="readonly">
</div>

<!-- Modal -->
<div class="modal fade bs-example-modal-lg" id="BanksModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h5 class="modal-title" id="myModalLabel">Existing Banks</h5>
            </div>
            <div class="modal-body">
                <div id="Categoriestoolbar">
                    @Html.ActionLink("Create new", "Create", "Bank", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-sm", target = "_blank" })
                    <span class="text-warning">&nbsp;(Requires reload current page to get new item)</span>
                </div>
                <table id="BanksTable"
                       data-toolbar="#Bankstoolbar"
                       data-toggle="table"
                       data-search="true"
                       data-click-to-select="true"
                       data-single-select="true"
                       data-detail-view="true"
                       data-pagination="true"
                       data-id-field="name"
                       data-page-list="[10, 25, 50, 100, ALL]"
                       data-page-size="6"
                       class="table table-responsive table-bordered table-striped" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th data-field="id" class="hidden">
                            </th>
                            <th data-checkbox="true">
                            </th>
                            <th>
                                Sl
                            </th>
                            <th data-field="code"
                                data-sortable="true">
                                Code
                            </th>
                            <th data-field="BankName"
                                data-sorter="sorter"
                                data-sortable="true">
                                Bank Name
                            </th>
                            <th data-field="BranchName"
                                data-sorter="sorter"
                                data-sortable="true">
                                Branch Name
                            </th>
                            <th data-field="AccountName"
                                data-sorter="sorter"
                                data-sortable="true">
                                Account Name
                            </th>
                            <th data-field="AccountNo"
                                data-sorter="sorter"
                                data-sortable="true">
                                Account No
                            </th>
                            @*@if (User.IsInRole("LocalAdmin") || User.IsInRole("Admin")) {*@
                            @if (User.IsInRole("Admin"))
                            {
                                <th data-field="Amount"
                                    data-sorter="sorter"
                                    data-sortable="true">
                                    Amount
                                </th>
                            }
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="hidden">
                                        @item.Id
                                    </td>
                                    <td></td>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @item.Code
                                    </td>
                                    <td>
                                        @item.BankName
                                    </td>
                                    <td>
                                        @item.BranchName
                                    </td>
                                    <td>
                                        @item.AccountName
                                    </td>
                                    <td>
                                        @item.AccountNo
                                    </td>
                                    @*@if (User.IsInRole("LocalAdmin") || User.IsInRole("Admin"))*@
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <td>
                                            @item.TotalAmount
                                        </td>
                                    }
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    var $table = $('#BanksTable');
    $table.on('check.bs.table', function (e, row) {
        $('#BanksCode').val($.trim(row.code));
        $('#BanksName').val($.trim(row.BankName));
        $('#BanksId').val($.trim(row.id)).trigger('input');
    });
    $table.on('uncheck.bs.table', function (e, row) {
        $('#BanksCode').val('');
        $('#BanksName').val('');
        $('#BanksId').val('').trigger('input');
    });
</script>
