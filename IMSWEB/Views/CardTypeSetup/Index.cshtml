@model IEnumerable< CardTypeSetupViewModel>
@using IMSWEB.Model
    @{
        ViewBag.Title = "Card Type Setup";
    }
    <h4 class="text-left inline-header">Existing @ViewBag.Title</h4>
    @Html.ActionLink("Create new", "Create", "CardTypeSetup", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-sm pull-right",id="toolbar" })
    <hr />
    <table id="cashcollectionTable"
           data-toggle="table"
           data-search="true"
           data-show-refresh="true"
           data-show-toggle="true"
           data-show-columns="true"
           data-show-export="true"
           data-detail-view="true"
           data-pagination="true"
           data-id-field="name"
           data-page-list="[10, 25, 50, 100, ALL]"
           data-page-size="10"
           data-toolbar="#toolbar"
           class="table table-responsive table-bordered table-striped" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>
                    Sl
                </th>
                <th data-field="code"
                    data-sorter="sorter"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.Code)
                </th>

                <th data-field="BankName"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.BankName)
                </th>
                <th data-field="AccountNo"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.AccountNo)
                </th>
                <th data-field="CardTypeName"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.CardTypeName)
                </th>
                <th data-field="Percentage"
                    data-sortable="true">
                    @Html.DisplayNameFor(model => model.Percentage)
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @count
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.BankName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AccountNo)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CardTypeName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Percentage)
                        </td>
                        <td>
                          
                            @if (User.IsInRole(EnumUserRoles.Admin.ToString()) || User.IsInRole(EnumUserRoles.LocalAdmin.ToString()) || User.IsInRole(EnumUserRoles.superadmin.ToString()))
                            {
                                @Html.ActionLink("Edit", "Edit", new { id = item.CardTypeSetupID })
                                <span>|</span>
                                @Html.ActionLink("Delete", "Delete", new { id = item.CardTypeSetupID }, new { onclick = "if(!confirm('Do you want to delete this?')) return false;" })
                            }
                        </td>
                    </tr>
                            count++;
                }
            }
        </tbody>
    </table>
