@{
    ViewBag.Title = "Admin Cash In Hand";
}

<h4 class="inline-header">@(ViewBag.Title + ".")</h4>
<div class="row">
    <div class="col-lg-5 col-md-6">
        <div class="panel panel-default">
            <div class="panel-body">

                @using (Ajax.BeginForm("AdminCashInHandReport", "Report", new { ReturnUrl = ViewBag.ReturnUrl },
                    ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", LoadingElementId = "spinningIcon" },
                    htmlAttributes: new { role = "form", @class = "form-horizontal" }))
                {
                    <div class="panel panel-default">
                        <div class="panel-body">
                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    <input id="ReportType" type="radio" title="Day" value="1" name="ReportType" checked />
                                    <span>Day</span>
                                </label>
                                <div class="col-md-9">
                                    <div class="input-group date" id="FromDate">
                                        <input type='text' class="input-sm form-control" name='FromDate' />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    <input id="ReportType" type="radio" title="Month" value="2" name="ReportType" />
                                    <span>Month</span>
                                </label>
                                <div class='col-md-9' id='Month'>
                                    <div class='input-group date' id='Month'>
                                        <input type='text' class="input-sm form-control" name='Month' />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-3">
                                    <input id="ReportType" type="radio" title="Year" value="3" name="ReportType" />
                                    <span>Year</span>
                                </label>
                                <div class='col-md-9' id='Year'>
                                    <div class='input-group date' id='Year'>
                                        <input type='text' class="input-sm form-control" name='Year' />
                                        <span class="input-group-addon">
                                            <i class="fa fa-calendar" aria-hidden="true"></i>
                                        </span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3">Concern</label>
                                <div class="col-md-9">
                                    @Html.DropDownList("ConcernID", @ViewBag.Concerns as SelectList, "--All Concerns--", new { @class = "form-control input-sm" })
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-md-3">
                                    <img id="spinningIcon" height="45" width="45" style="display: none;" class="pull-right" src="~/Content/images/Spinner.gif" />
                                </div>
                                <div class="col-md-9">
                                    <input id="btnPreview" type="submit" value="Preview" class="btn btn-sm btn-info" />
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {

        $('#Month').datetimepicker({
            defaultDate: moment(),
            format: 'MMM-YYYY',
            viewMode: "months",
            toolbarPlacement: "top",
            allowInputToggle: true,
        });

        $('#FromDate').datetimepicker({
            defaultDate: moment(),
            format: 'DD-MMM-YYYY',
        });


        $('#Year').datetimepicker({
            defaultDate: moment(),
            format: 'YYYY',
            viewMode: "years",
        });
    });

</script>
