                e.preventDefault();
                toastr.error("Please enter MRP");
                IsValid = false;
                $("#PODetail_MRPRate").focus()
                return false;
            }
        }

        if (IsValid) {
            var Quantity = $("#PODetail_Quantity").val();
            if (Quantity == "") {
                e.preventDefault();
                toastr.error("Please enter quantity");
                IsValid = false;
                $("#PODetail_Quantity").focus()
                return false;
            }
        }

        if (IsValid) {
            var Quantity = getDefaultIntIfEmpty( $("#PODetail_Quantity").val());
            var imeis = $('input[name*="IMEINo"]').length;
            if (Quantity == 0) {
                e.preventDefault();
                toastr.error("Please enter quantity");
                IsValid = false;
                $("#PODetail_Quantity").focus()
                return false;
            }
            var productType = getDefaultIntIfEmpty($('#ProductsType').val());
            //when product is not nobarcode
            if (productType != 2) {
                if (Quantity != imeis) {
                    e.preventDefault();
                    toastr.error("No. of IMEI and quantity is not same.");
                    IsValid = false;
                    $("#PODetail_Quantity").focus()
                    return false;
                }
            }
        }

