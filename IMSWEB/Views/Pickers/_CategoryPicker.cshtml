@model dynamic
<div class="input-group">
    <input type="text" class="input-sm form-control input-sm" id="CategoriesCode" name="CategoriesCode" value="@ViewBag.CategoriesCode" readonly="readonly">
    <span class="input-group-btn">
        <button type="button" class="btn btn-sm btn-info" data-toggle="modal" data-target="#CategoriesModal"><i class="fa fa-plus-circle" aria-hidden="true"></i>&nbsp;Pick</button>
    </span>
    <input type="text" class="input-sm form-control input-sm" id="CategoriesName" name="CategoriesName" value="@ViewBag.CategoriesName" readonly="readonly">
    <input type="hidden" class="input-sm form-control input-sm" id="CategoriesId" name="CategoriesId" value="@ViewBag.CategoriesId" readonly="readonly">
</div>

<!-- Modal -->
<div class="modal fade bs-example-modal-lg" id="CategoriesModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h5 class="modal-title" id="myModalLabel">Existing Categories</h5>
            </div>
            <div class="modal-body">
                <div id="Categoriestoolbar">
                    @Html.ActionLink("Create new", "Create", "Category", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-sm", target = "_blank" })
                    <span class="text-warning">&nbsp;(Requires reload current page to get new item)</span>
                </div>
                <table id="CategoriesTable"
                       data-toolbar="#Categoriestoolbar"
                       data-toggle="table"
                       data-search="true"
                       data-click-to-select="true"
                       data-single-select="false"
                       data-detail-view="true"
                       data-pagination="true"
                       data-id-field="name"
                       data-page-list="[10, 25, 50, 100, ALL]"
                       data-page-size="6"
                       class="table table-responsive table-bordered table-striped" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th data-field="id" class="hidden">
                            </th>
                            <th data-checkbox="true">
                            </th>
                            <th>
                                Sl
                            </th>
                            <th data-field="code"
                                data-sortable="true">
                                Code
                            </th>
                            <th data-field="name"
                                data-sorter="sorter"
                                data-sortable="true">
                                Name
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int count = 1;
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td class="hidden">
                                        @item.Id
                                    </td>
                                    <td></td>
                                    <td>
                                        @count
                                    </td>
                                    <td>
                                        @item.Code
                                    </td>
                                    <td>
                                        @item.Name
                                    </td>
                                </tr>
                                count++;
                            }
                        }
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<script>
    var $table = $('#CategoriesTable');

    //var checkedIdArr = [];
    var newCheckedIdArr = [];
    $table.on('check.bs.table', function (e, row) {
        //checkedIdArr.push($.trim(row.id));
        //$('#CategoriesCode').val($.trim(row.code).val(checkedIdArr));
        //$('#CategoriesName').val($.trim(row.name).val(checkedIdArr));
        //$('#CategoriesId').val(checkedIdArr);

        newCheckedIdArr.push($.trim(row.id));
        //console.log(newCheckedIdArr);
        $('#CategoriesId').val(newCheckedIdArr);
        SetFormValue();

    });
    $table.on('uncheck.bs.table', function (e, row) {
        var index = newCheckedIdArr.indexOf($.trim(row.id));
        if (index > -1)
            newCheckedIdArr.splice(index, 1);
        $('#CategoriesId').val('').val(newCheckedIdArr);
        SetFormValue();

    });
    function getRowById(id) {
        return $("td").filter(function () {
            return $(this).hasClass('hidden') && $.trim($(this).text()) == id;
        }).closest("tr");
    }

