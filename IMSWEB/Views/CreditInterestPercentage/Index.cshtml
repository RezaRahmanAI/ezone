@model IEnumerable<IMSWEB.CreditInterestPercentageViewModel>

@{
    ViewBag.Title = "CreditInterestPercentages";
}

    <h4 class="text-left inline-header">Existing Credit Interest Percentage</h4>
@Html.ActionLink("Create new", "Create", "CreditInterestPercentage", routeValues: null, htmlAttributes: new { @class = "btn btn-primary btn-sm pull-right" })
<hr />

<table id="companyTable"
       data-toggle="table"
       data-search="true"
       data-show-refresh="true"
       data-show-toggle="true"
       data-show-columns="true"
       data-show-export="true"
       data-detail-view="true"
       data-pagination="true"
       data-id-field="name"
       data-page-list="[10, 25, 50, 100, ALL]"
       data-page-size="10"
       class="table table-responsive table-bordered table-striped" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Sl
            </th>
            <th data-field="code"
                data-sortable="true">
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th data-field="name"
                data-sorter="sorter"
                data-sortable="true">
                @Html.DisplayNameFor(model => model.Percentage)
            </th>
            <th data-field="EffectDate"
                data-sortable="true">
                @Html.DisplayNameFor(model => model.EffectDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @count
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Code)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Percentage)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EffectDate)
                        @*@item.EffectDate.ToString("dd MMM yyyy")*@
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IntPercentageID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IntPercentageID }, new { onclick = "if(!confirm('Do you want to delete this Credit Interest Percentage?')) return false;" })
                    </td>
                </tr>
                count++;
            }

        }
    </tbody>
</table>
