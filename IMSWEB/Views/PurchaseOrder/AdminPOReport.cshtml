@using IMSWEB.Model

@{
    ViewBag.Title = "Admin Purchase Report";
}

<h4>@(ViewBag.Title + ".")</h4>
<hr />
<div class="row">
    <div class="col-md-5">
        <div class="panel">
            <div class="panel-body">
                @using (Ajax.BeginForm("AdminPOReport", "Report", new { ReturnUrl = ViewBag.ReturnUrl }, ajaxOptions: new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "report", LoadingElementId = "spinningIcon" }, htmlAttributes: new { role = "form" }))
                {
                    <input type="hidden" name="PurchaseType" value=@EnumPurchaseType.Purchase />
                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.Label("From Date", htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class='col-sm-9 input-group date' id='FromDate'>
                            <input type='text' class="input-sm form-control input-sm" name='FromDate' />
                            <span class="input-group-addon">
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                            </span>

                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">
                            @Html.Label("To Date", htmlAttributes: new { @class = "control-label" })
                        </div>
                        <div class='col-sm-9 input-group date' id='ToDate'>
                            <input type='text' class="input-sm form-control input-sm" name='ToDate' />
                            <span class="input-group-addon">
                                <i class="fa fa-calendar" aria-hidden="true"></i>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-3">

                        </div>
                        <div class='col-sm-9 input-group date' id='FromDate'>
                            <input id="rdoSummary" type="radio" title="Summary" value="1" name="ReportType" checked />Summary &nbsp;&nbsp;
                            <input id="rdioDetail" title="Detail" type="radio" value="2" name="ReportType" />Detail
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">Concerns</label>
                        <div class="col-md-9">
                            @Html.DropDownList("ConcernID", @ViewBag.Concerns as SelectList, "--All Concerns--", new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-2">
                            <img id="spinningIcon" height="45" width="45" style="display: none;" class="pull-right" src="~/Content/images/Spinner.gif" />
                        </div>
                        <div class="col-sm-9 col-sm-offset-3 col-md-9 col-md-offset-3">
                            <input id="btnPreview" type="submit" value="Preview" class="btn btn-sm btn-info" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script>
    $('#FromDate').datetimepicker({
        defaultDate: moment(),
        format: 'DD-MMM-YYYY'
    });

    $('#ToDate').datetimepicker({
        defaultDate: moment(),
        format: 'DD-MMM-YYYY'
    });
</script>
