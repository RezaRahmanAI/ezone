                                    @*<input type="number" step="0.01" class="input-sm form-control input-sm text-right" name="creditRemainingDue" id="txtCreditRemainingDue" />*@
                                    @Html.EditorFor(m => m.SalesOrder.CreditRemainingDue, new { htmlAttributes = new { @class = "input-sm form-control input-sm text-right", type = "number", step = "0.01", @id = "txtCreditRemainingDue" } })
                                    <input type="hidden" name="prevCreditRemainingDue" id="txtPrevCreditRemainingDue" value="@Model.SalesOrder.CreditRemainingDue" />
                                    <input type="hidden" name="HireSalesId" id="dHireSalesId" value="@Model.SalesOrder.HireSalesId" />
                                </div>
                            </div>
                        </div>
                        @*<div class="col-md-12">
                                <div class="form-group">
                                    <label class="control-label col-md-2">To Customer Pay</label>
                                    <div class="col-md-10">
                                        @Html.EditorFor(m => m.SalesOrder.ToCustomerPayAmt, new { htmlAttributes = new { @class = "input-sm form-control input-sm text-right", type = "number", step = "0.01", @id = "txtToCustomerAmt" } })
                                    </div>
                                </div>
                            </div>*@
                        @*<div class="col-md-12">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.SalesOrder.Remarks, new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(m => m.SalesOrder.Remarks, new { htmlAttributes = new { @class = "input-sm form-control input-sm", @id = "Remarks" } })
                                        @Html.ValidationMessageFor(m => m.SalesOrder.Remarks, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            </div>*@
                        @*<div class="col-md-7">
                                <div class="form-group">
                                    <label class="control-label col-md-6">From Customer Rec.</label>
                                    <div class="col-md-6">
                                        <input type="number" step="0.01" class="input-sm form-control input-sm text-right" name="FromCustomerRecAmt" id="txtFromCustomerAmt" />
                                    </div>
                                </div>
                            </div>*@
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
