@using IMSWEB
@model LoginViewModel
@{
    ViewBag.Title = "Log In";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css"/>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .container-fluid {
        margin-right: auto;
        margin-left: auto;
        padding-left: 0 !important;
        padding-right: 0 !important;
    }
    #content {
         padding: 0px !important; 
    }
    .row {
         margin-right: 0 !important; 
         margin-left: 0!important; 
         padding: 0 !important
    }
    .footer-bottom {
        padding-top: 0 !important;
        padding-bottom: 0 !important;
        margin-top: 0 !important;
    }
</style>

<div class="header-nav">
    <div class="row">
        <div class="col-md-5 col-lg-4">
            <div class="logo-panel">
                <div class="logo-img text-center">
                    <img class="mw-100" style="width: 50px;" src="~/Content/images/company-logo.jpg" alt="Alternate Text" />
                </div>
                <span></span>
                <div class="logo-text">
                    <h3 class="">Inventory Managment Software (IMS)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-7 col-lg-8">
            @if (Model != null && !string.IsNullOrWhiteSpace(Model.ErrorMessage))
            {
                <div class="alert alert-danger" style="font-weight:bold;">
                    @Model.ErrorMessage
                </div>
            }
        </div>
    </div>
</div>

<div class="body">
    <div class="row">
        <div class="col-md-6 col-sm-12 col-12">
            <div class="logIn">
                <div class="" id="loginForm">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h3 class="mb-4 fw-bolder">Welcome To IMS</h3>

                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group user-input">
                            <i class="fa-solid fa-user"></i>
                            @Html.LabelFor(m => m.UserName, new { @class = "control-label login-lebel" })
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control input-sm login-input", autofocus = "autofocus", placeholder = "Enter User Name" })
                            @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group pass-input">
                            <i class="fa-solid fa-keyboard"></i>
                            @Html.LabelFor(m => m.Password, new { @class = "control-label login-lebel" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm login-input", placeholder = "Enter Password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger", style="color: red !important;" })
                        </div>
                        <div class="form-group rember-input">
                            @Html.CheckBoxFor(m => m.RememberMe)
                            @Html.LabelFor(m => m.RememberMe)
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block w-100 logInButton"><i class="fa fa-sign-in" aria-hidden="true"></i>&nbsp;Log in</button>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="logInCarousel">
                <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
                    <div class="carousel-indicators">
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
                        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3" aria-label="Slide 4"></button>
                    </div>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="~/Content/images/cs2.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/dashboard.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/accounting-700x550.jpg" class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="~/Content/images/Mask-group.png" class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev prev-btn" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next next-btn" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="loginFooter">
    <div class="row">
        <div class="col-md-4">
            <div class="support ps-4 text-center text-md-start">
                <h3 class="fw-bold border-bottom border-2 border-dark d-inline-block text-center">Support (9:00 AM to 6:00 PM)</h3>
                <div class="support-text">
                    <span> <strong>Mobile No :</strong> +8801710-638383</span>,
                    <span><strong>WhatsApp No :</strong> +8801822-982760</span> <br />
                    <span><strong>Email :</strong> helpdesk.objectcanvas@gmail.com</span>
                </div> 
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-center mt-3 mt-md-0">
                <span class="fs-4">E-ZONE @DateTime.Today.Year All rights reserved</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="text-md-end text-center pe-md-4 mt-3 mt-md-0">
                <a class="fs-4" target="_blank" href="https://objectcanvas.com/">&copy;Object Canvas Technology</a>
            </div>
        </div>
    </div>
</div>